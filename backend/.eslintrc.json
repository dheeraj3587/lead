{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": 2021 },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-useless-escape": "off"
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/"]
}
