{
  "name": "backend",
  "version": "1.0.0",
  "description": "Lead Management System Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seed.js",
    "seed:clean": "node scripts/seed.js --clean",
    "health": "node -e \"require('http').get('http://localhost:'+(process.env.PORT||5000)+'/api/health', r=>{console.log('Health status:', r.statusCode); process.exit(r.statusCode===200?0:1)})\"",
    "validate:env": "node -e \"require('./config/validateEnv')()\"",
    "deploy": "node ../scripts/deploy-backend.mjs",
    "deploy:railway": "node ../scripts/deploy-backend.mjs railway",
    "deploy:render": "node ../scripts/deploy-backend.mjs render",
    "deploy:heroku": "node ../scripts/deploy-backend.mjs heroku",
    "deploy:fly": "node ../scripts/deploy-backend.mjs fly",
    "lint": "eslint . --ext .js",
    "test": "npm run lint && jest --passWithNoTests",
    "test:ci": "jest --ci --passWithNoTests"
  },
  "keywords": ["express", "mongodb", "jwt", "lead-management"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
  "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "@faker-js/faker": "^8.4.1",
    "minimist": "^1.2.8",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
